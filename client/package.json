{
    "name": "d3js-tweet-graph",
    "version": "0.0.1",
    "description": "D3 Parade Entry",
    "main": "build/main.js",
    "types": "build/types/main.d.ts",
    "repository": "https://github.com/uncharted-aske/grafer.git",
    "author": "Dario Segura, Adamo Carolli",
    "license": "Apache-2.0",
    "type": "module",
    "scripts": {
        "build": "run-p build:scripts build:types",
        "build:scripts": "node esbuild.js",
        "build:types": "tsc --declaration --emitDeclarationOnly --skipLibCheck --project ./tsconfig.d.json --outDir ./build/types",
        "clean": "run-p clean:**",
        "clean:build": "rimraf build",
        "develop": "yarn build:scripts --watch --dev-server",
        "docs": "typedoc --out ./docs ./src --exclude 'node_modules/**/*' --mode file --includeVersion --stripInternal --skipLibCheck",
        "lint": "eslint --config ./.eslintrc.cjs \"./{src,tests,examples}/**/*.{js,ts}\"",
        "pages": "yarn build:scripts --pages",
        "prepack": "run-s clean build lint",
        "pre-push": "run-p pre-push:**",
        "pre-push:lint": "yarn lint",
        "watch": "run-p watch:*",
        "watch:scripts": "yarn build:scripts --watch",
        "watch:types": "yarn build:types --watch"
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn pre-push"
        }
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "copy": "^0.3.2",
        "esbuild": "^0.8.52",
        "eslint": "^7.18.0",
        "eslint-config-esnext": "^4.1.0",
        "eslint-plugin-import": "^2.22.1",
        "globby": "^11.0.2",
        "husky": "^5.1.1",
        "live-server": "^1.2.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "tslib": "^2.1.0",
        "typedoc": "^0.20.19",
        "typescript": "^4.1.3",
        "yargs": "^16.2.0"
    },
    "dependencies": {
        "@dekkai/data-source": "^0.2.1",
        "@dekkai/event-emitter": "^1.1.0",
        "@uncharted.software/grafer": "^0.3.1",
        "chroma-js": "^2.1.1",
        "gl-matrix": "^3.3.0",
        "tweakpane": "^2.4.0"
    }
}
